# Vercel Environment Variables
# Copy these to your Vercel dashboard under Settings > Environment Variables

# Database - Use Vercel Postgres or external provider
DATABASE_URL="postgresql://username:password@host:5432/database"
POSTGRES_PRISMA_URL="postgresql://username:password@host:5432/database"
POSTGRES_URL_NON_POOLING="postgresql://username:password@host:5432/database"

# Redis - Use Upstash Redis (free tier)
REDIS_URL="redis://default:password@host:6379"

# JWT Secret (Generate: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET="your-super-secure-jwt-secret-64-characters-long"

# App URLs (will be auto-set by Vercel)
NODE_ENV="production"
FRONTEND_URL="https://your-app.vercel.app"
BACKEND_URL="https://your-app.vercel.app"

# AI Features (Recommended - Claude is better than OpenAI for UPC analysis)
ANTHROPIC_API_KEY="sk-ant-your-claude-api-key-here"

# Stripe (Optional - for payments)
STRIPE_SECRET_KEY="sk_test_your_stripe_test_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# AWS S3 (Optional - for file uploads)
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
AWS_REGION="us-east-1"
S3_BUCKET_NAME="your-bucket-name"

# Feature Flags
FEATURE_FLAGS_ENABLED="true"
UNLEASH_SERVER_API_URL="https://app.unleash-hosted.com/demo/api/"
UNLEASH_CLIENT_API_TOKEN="your-unleash-token"

# Monitoring
LOG_LEVEL="info"
METRICS_ENABLED="true"